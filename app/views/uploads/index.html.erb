<% if current_user %>
  <p id="notice"><%= notice %></p>

  <h1>Images</h1>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @files.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.filepath %></td>
        <td><%= link_to 'Show', image %></td>
        <% if image.user_id == current_user.id%>
          <td><%= link_to 'Edit', edit_upload_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% else %>
          <td>Edit</td>
          <td>Destroy</td>
        <% end %>
        <%#byebug %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New File', new_upload_path %>
<% else %>
  <p>Invalid user</p>
<% end %>